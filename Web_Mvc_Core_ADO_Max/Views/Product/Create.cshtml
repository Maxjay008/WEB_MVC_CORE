@model Web_Mvc_Core_ADO_Max.Models.Product_Max
<h3>Ввод нового продукта в таблицу</h3>

<div class="form-horizontal">
    <form asp-action="Create">
        <div class="form-group">
            <label class="control-label">Продукт</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Описание</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Файл изображения</label>
            <input asp-for="Image_Name" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Цена</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
</div>
